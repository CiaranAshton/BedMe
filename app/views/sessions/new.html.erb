<% provide(:title, "Log in") %>
<div id=bimage>
<div id="overlay">
  <div id="form_container">
    <div class="form_title">Login</div>
    <%= form_for(:session, url: login_path, :html => { :id => "login" }) do |f| %>
      <div class="text_input email_validator">
        <%= f.label :email, "Email address" %>
        <%= f.email_field :email, :placeholder => "Email address" %>
        <span class="info"></span>
      </div>
      <div class="text_input not_empty_validator">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, :placeholder => "Password" %>
      </div>
      <div id="remember_me" class="cbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "<span class=cbouter><span class=cbinner></span></span>".html_safe %>
      </div>
      <%= f.submit "Login", class: "raised main" %>
      <div><%= link_to "Not signed up yet?", signup_path, class: "link" %></div>
    <% end %>
  </div>
</div>
</div>