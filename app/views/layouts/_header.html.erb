<header>
  <div id="brand">
    <%= link_to image_tag("logoType.png", alt: "Logo for BedMe").html_safe, root_path %>
  </div>
  
  <span>
    
    <% if logged_in? %> <%= link_to '<span id="profile">'.html_safe + (gravatar_for @user) + '<span>'.html_safe +  @user.name + '</span></span>'.html_safe, current_user %> <% end %>
    
    <nav>
      <%= image_tag("more.png", alt: "Drop Down Box") %>
      <ul>
        <% if logged_in? %>
          <li><%= link_to "Settings", '#' %></li>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Register", signup_path %></li>
          <li><%= link_to "About", about_path %></li>
        <% end %>
      </ul>
    </nav>
  </span>
</header>