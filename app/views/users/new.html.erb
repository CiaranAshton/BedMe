<% provide(:title, 'Sign up') %>
<div id=bimage>
<div id="overlay">
  <div id="login_container">
    <div class="form_title">
      <span>Sign up</span>
    </div>
    <%= form_for(@user, :html => { :id => "register" }) do |f| %>
      <%= render 'shared/error_messages' %>
      <div id="txt_username" class="text_input">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, :placeholder => "Name" %>
      </div>
      <div id="txt_emailAddress" class="text_input">
        <%= f.label :email, "Email address" %>
        <%= f.email_field :email, :placeholder => "Email address" %>
        <span class="info"></span>
      </div>
      <div id="txt_newPassword" class="text_input">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <span class="info"></span>
      </div>
      <div id="txt_confirmPassword" class="text_input">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, :placeholder => "Confirm password" %>
        <span class="info"></span>
      </div>
    
      <%= f.submit "Create my account", class: "raised btn_main" %>
      <%= link_to f.button("Already signed up?", class: "link"), login_path %>
    <% end %>
    </div>
  </div>
</div>
</div>