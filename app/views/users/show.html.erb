<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <div id="user_page">
        
        <div id="users_left">
          <div id="search_bar">
            <input type="text" name="fname">
            <input type="submit" value="Search">
          </div>
        </div>
          
        <div id="users_right">
          
          <div id="user_profile">
            <img id="user_pic" <%= gravatar_for @user %>
            <div id="user_name"><%= @user.name %></div>
            <div id="user_type">(Tenant / Landlord / admin)</div> <!-- User type -->
          </div>
          <div id="past_props"> <!-- list of previously rated properties, (only for tenants) -->
            
          </div>
          <div id="user_props"> <!-- list of landlord properties, (only for landlords) -->
            
          </div>
        </div>
        
      </div>
      
    </section>
  </aside>
</div>